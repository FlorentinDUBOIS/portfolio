{
    "compilerOptions": {
        "charset": "utf-8",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": false,
        "allowJs": false,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "allowUnusedLabels": true,
        "jsx": "react",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": false,
        "noImplicitReturns": true,
        "outDir": "built",
        "removeComments": true,
        "skipLibCheck": true,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "diagnostics": true,
        "pretty": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },

    "exclude": [
        "node_modules"
    ],

    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
